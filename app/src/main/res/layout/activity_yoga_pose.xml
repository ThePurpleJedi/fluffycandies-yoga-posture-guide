<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_yoga_pose.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#DDDDDD">

  <!-- English Name of the Pose -->
  <TextView
      android:id="@+id/tvEnglishName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="English Name"
      android:textSize="24sp"
      android:textColor="#333333"
      android:fontFamily="sans-serif-medium"
      android:layout_marginBottom="8dp"/>

  <!-- Sanskrit Name of the Pose -->
  <TextView
      android:id="@+id/tvSanskritName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sanskrit Name"
      android:textSize="18sp"
      android:textColor="#666666"
      android:fontFamily="sans-serif"
      android:layout_marginBottom="16dp"/>

  <!-- Image of the Pose -->
  <ImageView
      android:id="@+id/ivPoseImage"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:contentDescription="Image of Yoga Pose"
      android:scaleType="centerCrop"
      android:layout_marginBottom="16dp"/>
</LinearLayout>

